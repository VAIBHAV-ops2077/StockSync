{
  "name": "stocksync",
  "version": "1.0.0",
  "description": "Full-stack inventory management system with real-time updates",
  "workspaces": [
    "backend",
    "StockSync"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd StockSync && npm run dev",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "build": "npm run build --workspace=StockSync",
    "build:frontend": "cd StockSync && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../StockSync && npm install",
    "clean": "rm -rf node_modules backend/node_modules StockSync/node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/stocksync.git"
  },
  "keywords": [
    "inventory-management",
    "stock-tracking",
    "react",
    "nodejs",
    "mongodb",
    "websocket",
    "real-time",
    "dark-mode"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/stocksync/issues"
  },
  "homepage": "https://github.com/yourusername/stocksync#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
